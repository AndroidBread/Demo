<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alivc_dialog_error_bg">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/alivc_common_padding_20"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/alivc_alivc_replay_msg"
            android:textColor="@color/alivc_common_font_white_light"
            android:textSize="@dimen/alivc_common_font_14" />


        <ImageView
            android:id="@+id/replay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/alivc_common_margin_16"
            android:src="@drawable/icon_video_reload"
            android:gravity="center"
            android:contentDescription="@string/alivc_replay"/>

    </LinearLayout>

</RelativeLayout>