<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alivc_dialog_error_bg">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="@dimen/alivc_common_padding_20"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/retry"
            android:layout_width="@dimen/alivc_common_width_group_82"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/retry_btn"
                android:src="@drawable/icon_video_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/alivc_common_font_15" />
        </RelativeLayout>

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alivc_common_margin_5"
            android:layout_marginRight="@dimen/alivc_common_margin_5"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="视频获取失败"
            android:textColor="@color/alivc_common_font_white_light"
            android:textSize="@dimen/alivc_common_font_14" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone"
            android:text="@string/alivc_error_code"
            android:textColor="@color/alivc_common_font_white_light"
            android:textSize="@dimen/alivc_common_font_14" />



    </LinearLayout>

</RelativeLayout>